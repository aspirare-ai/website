---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Aspirare AI' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:wght@800&family=Playfair+Display:wght@800&family=Roboto+Mono:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <a href='#contact'>contact aspirare sales</a>
      <nav>
        <a href='#hero'>aspirare</a>
        <ul>
          <li><a href='#products'>products</a></li>
          <li><a href='#about'>about</a></li>
          <li><a href='#careers'>careers</a></li>
          <li><a href='#news'>news</a></li>
          <li><a href='#contact'>contact</a></li>
        </ul>
      </nav>
    </header>
    <slot />
    <footer>
      Aspirare
      <a href='/terms-conditions'>Terms & Conditions</a>
      <div>copyright aspirare 2023<div></div></div>
    </footer>
    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          rgb(var(--accent-light)) 30%,
          white 60%
        );

        --bg-primary: #d1ecc2;

        --font-family: Roboto Mono;
      }
      html {
        font-family: var(--font-family), system-ui, sans-serif;
        background: var(--bg-primary);
      }
    </style>
  </body>
</html>
