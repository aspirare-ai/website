              <defs>
                <clipPath id='clip0_172_193'>
                  <rect
                    width='278.062'
                    height='280'
                    fill='white'
                    transform='translate(3)'></rect>
                </clipPath>
              </defs>
            </svg>
          </div>
        </div>
      </section>
      <section id='careers'>
        <div class='container'>
          <div class='box'>
            <h2>We're hiring</h2>
            <div class='link-container'>
              <a href='/'>See open positions</a>
            </div>
          </div>
        </div>
      </section>
    </div>
    <section id='customers'>
      <div class='container'>
        <h2>
          <span>we</span>
          <svg
            width='40'
            height='40'
            viewBox='0 0 40 40'
            fill='none'
            xmlns='http://www.w3.org/2000/svg'
          >
            <g id='heart-solid 1'>
              <path
                id='Vector'
                d='M3.71875 23.4687L17.8359 36.6484C18.4219 37.1952 19.1953 37.4999 20 37.4999C20.8047 37.4999 21.5781 37.1952 22.1641 36.6484L36.2812 23.4687C38.6562 21.2577 40 18.1562 40 14.914V14.4609C40 8.99993 36.0547 4.34368 30.6719 3.44524C27.1094 2.85149 23.4844 4.01556 20.9375 6.56243L20 7.49993L19.0625 6.56243C16.5156 4.01556 12.8906 2.85149 9.32812 3.44524C3.94531 4.34368 0 8.99993 0 14.4609V14.914C0 18.1562 1.34375 21.2577 3.71875 23.4687Z'
                fill='#52D30A'></path>
            </g>
          </svg>
          <span>our customers</span>
        </h2>
      </div>
    </section>

    <section id='news'>
      <Image src={newsTexture} alt='news texture' aria-hidden />
      <div class='container'>
        <h2>News</h2><div class='card-carousel'>
          <div class='news-card'></div><div class='news-card'></div>
        </div>
      </div>
    </section>
    <section id='contact'>
      <div class='container'>
        <h2>Contact</h2>
        <div class='link-container'>
          <a href='mailto:info@aspirare.com'>info@aspirare.com</a>
        </div>
      </div>
    </section>
  </main>

  <style>
    .spacer {
      height: 11.8rem;
    }

    main {
      position: relative;
    }

    .hero-container {
      position: relative;
    }

    .hero-bg-container {
      position: absolute;
      height: 100%;
      width: 100%;
      overflow: hidden;
    }
    .hero-bg-container img {
      position: absolute;
      width: 43.75rem;
      height: 24.625rem;

      flex-shrink: 0;
      mix-blend-mode: screen;
    }

    #hero {
      padding: 3rem 0;
      background: linear-gradient(
        to top,
        var(--bg-primary),
        var(--bg-primary) 40%,
        transparent 50%
      );
    }

    #hero .container {
      mix-blend-mode: multiply;
      display: flex;
      flex-direction: column;
      gap: 3rem;
    }

    h1 {
      font-size: 2.25rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.45rem;
      text-transform: uppercase;
    }
    p {
      margin-bottom: 1.5rem;
    }

    .#hero img {
      width: 100%;
      flex-shrink: 0;
    }

    section h2 {
      font-size: 3rem;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
      letter-spacing: 0.6rem;
      text-transform: uppercase;
      padding-bottom: 1.5rem;
    }

    #products ul {
      margin: 3.5rem 0;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .company-container {
      position: relative;
      overflow: hidden;
      background-color: #131515;
    }

    .company-container img#texture {
      position: absolute;
      object-fit: cover;
      height: 200%;
      width: 200vw;
      top: 0;
      left: 0;
      mix-blend-mode: overlay;
    }

    #about .container {
      color: #ffffff;
      padding-top: 4rem;
    }

    #about .icon-container {
      mix-blend-mode: lighten;
    }

    #about svg {
      margin-left: 2rem;
    }

    #about svg path#heart {
      fill: #131515;
    }

    #careers {
      background-color: #000000;
      color: var(--accent);
      padding-bottom: 3.75rem;
    }

    #careers .container .box {
      border: 1px solid var(--accent);
      border-radius: 1.5rem;
      padding: 4.5rem 1rem;
      mix-blend-mode: lighten;
    }

    #careers h2 {
      text-align: center;
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: 6.4px;
      word-wrap: break-word;
    }

    #careers .link-container {
      background-color: var(--accent);
      border-radius: 0.75rem;
    }

    #careers a {
      color: #000;
      text-decoration: none;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem 1.25rem;
    }

    #customers {
      background-color: #131515;
      color: #ffffff;
      padding: 2.5rem 1.5rem;
    }

    #customers h2 {
      font-size: 2rem;
      font-weight: 700;
      letter-spacing: 6.4px;
      padding-bottom: 0;
      text-align: center;
    }

    #customers h2 svg {
      margin: -0.25rem 0.5rem;
      height: 2rem;
    }

    #news {
      position: relative;
      overflow: hidden;
    }

    #news img {
      position: absolute;
      object-fit: cover;
      top: 0;
      left: 0;
      mix-blend-mode: screen;
    }

    #news .container {
      padding: 9rem 0;

      overflow: hidden;
    }

    #news h2 {
      color: #181d1c;
      font-size: 3rem;
      mix-blend-mode: darken;
      padding: 0 1.3rem;
    }

    #news .card-carousel {
      display: flex;
      gap: 1rem;
      overflow: scroll;
      padding: 1rem 1.3rem;
    }

    #news .news-card {
      width: 20rem;
      height: 20rem;
      background-color: #c7e4b6;
      border: 1px solid #a8c896;
      border-radius: 0.5rem;
      flex: 0 0 auto;
      mix-blend-mode: darken;
    }

    #contact {
      padding: 8rem 0 6rem;
    }

    #contact .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    #contact h2 {
      font-size: 3rem;
    }

    #contact .link-container {
      background-color: #181d1c;
      padding: 1rem 1.25rem;
      border-radius: 0.5rem;
    }

    #contact a {
      color: white;
      font-size: 1.125rem;
      font-weight: 700;
      letter-spacing: 3.6px;
      text-decoration: none;
    }
  </style>
</Layout>
