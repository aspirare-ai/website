---
import { siteContent } from '../content/site'
const { about } = siteContent
---

<section id='about' class='section section-alt'>
  <div class='container'>
    <div class='about-content'>
      <div class='about-text'>
        <h2 class='section-title fade-in'>{about.title}</h2>
        <p class='about-description fade-in'>{about.description}</p>

        <div class='expertise'>
          <h3 class='expertise-title fade-in'>Core Expertise</h3>
          <div class='expertise-grid'>
            {
              about.expertise.map((skill, index) => (
                <div
                  class='expertise-item fade-in'
                  style={`animation-delay: ${index * 0.1}s`}
                >
                  <span class='expertise-check'>âœ“</span>
                  {skill}
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <div class='about-stats'>
        {
          about.stats.map((stat, index) => (
            <div
              class='stat-card fade-in'
              style={`animation-delay: ${index * 0.15}s`}
            >
              <div class='stat-number'>{stat.number}</div>
              <div class='stat-label'>{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .about-content {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: var(--spacing-2xl);
    align-items: start;
  }

  .about-text {
    max-width: 600px;
  }

  .section-title {
    margin-bottom: var(--spacing-md);
  }

  .about-description {
    font-size: 1.125rem;
    margin-bottom: var(--spacing-xl);
    line-height: 1.7;
  }

  .expertise-title {
    margin-bottom: var(--spacing-md);
    color: var(--color-gray-900);
  }

  .expertise-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-sm);
  }

  .expertise-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) 0;
    font-weight: 500;
    color: var(--color-gray-700);
  }

  .expertise-check {
    color: var(--color-accent);
    font-weight: 600;
    font-size: 1.1rem;
  }

  .about-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
  }

  .stat-card {
    background: var(--color-white);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    text-align: center;
    box-shadow: var(--shadow-md);
    transition: transform 0.3s ease;
    border: 1px solid var(--color-gray-200);
  }

  .stat-card:hover {
    transform: translateY(-5px);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-gray-600);
    font-weight: 500;
    line-height: 1.3;
  }

  @media (max-width: 768px) {
    .about-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .about-stats {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-sm);
    }

    .stat-card {
      padding: var(--spacing-md);
    }

    .stat-number {
      font-size: 2rem;
    }
  }
</style>
