---
import { siteContent } from '../content/site'
const { contact } = siteContent
---

<section id='contact' class='section section-alt'>
  <div class='container'>
    <div class='section-header'>
      <h2 class='section-title fade-in'>{contact.title}</h2>
      <p class='section-subtitle fade-in'>{contact.subtitle}</p>
    </div>

    <div class='contact-content'>
      <div class='contact-info fade-in'>
        <div class='info-card'>
          <h3 class='info-title'>Get in Touch</h3>
          <p class='info-description'>
            Our team of experts is ready to discuss your specific needs and
            challenges.
          </p>

          <div class='info-items'>
            <div class='info-item'>
              <span class='info-icon'>üìç</span>
              <div class='info-content'>
                <div class='info-label'>Address</div>
                <div class='info-value'>{contact.info.address}</div>
              </div>
            </div>

            <div class='info-item'>
              <span class='info-icon'>üìû</span>
              <div class='info-content'>
                <div class='info-label'>Phone</div>
                <div class='info-value'>{contact.info.phone}</div>
              </div>
            </div>

            <div class='info-item'>
              <span class='info-icon'>‚úâÔ∏è</span>
              <div class='info-content'>
                <div class='info-label'>Email</div>
                <div class='info-value'>{contact.info.email}</div>
              </div>
            </div>
          </div>

          <div class='cta-buttons'>
            <a href={`mailto:${contact.info.email}`} class='btn btn-primary'>
              Send Email
            </a>
            <a
              href={`tel:${contact.info.phone.replace(/\D/g, '')}`}
              class='btn btn-secondary'
            >
              Call Now
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-title {
    margin-bottom: var(--spacing-sm);
  }

  .section-subtitle {
    font-size: 1.125rem;
  }

  .contact-content {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .contact-info {
    max-width: 500px;
    width: 100%;
  }

  .info-card {
    background: var(--color-white);
    padding: var(--spacing-xl);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-gray-200);
    text-align: center;
  }

  .info-title {
    margin-bottom: var(--spacing-sm);
    color: var(--color-gray-900);
  }

  .info-description {
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .info-items {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
    text-align: left;
  }

  .info-item {
    display: flex;
    align-items: start;
    gap: var(--spacing-sm);
  }

  .info-icon {
    font-size: 1.25rem;
    margin-top: 2px;
  }

  .info-label {
    font-weight: 500;
    color: var(--color-gray-900);
    font-size: 0.875rem;
    margin-bottom: 2px;
  }

  .info-value {
    color: var(--color-gray-600);
    font-size: 0.875rem;
    line-height: 1.4;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-sm);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .info-card {
      padding: var(--spacing-md);
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 200px;
    }
  }
</style>
