---
import { siteContent } from '../content/site'
---

<footer class='footer'>
  <div class='container'>
    <div class='footer-content'>
      <div class='footer-brand'>
        <div class='logo'>
          <span class='logo-text'>{siteContent.company.name}</span>
        </div>
        <p class='footer-description'>{siteContent.company.description}</p>
      </div>

      <div class='footer-links'>
        <div class='footer-section'>
          <h4 class='footer-title'>Services</h4>
          <ul class='footer-list'>
            <li><a href='#services' class='footer-link'>AI Strategy</a></li>
            <li>
              <a href='#services' class='footer-link'>Process Automation</a>
            </li>
            <li>
              <a href='#services' class='footer-link'>Data Intelligence</a>
            </li>
          </ul>
        </div>

        <div class='footer-section'>
          <h4 class='footer-title'>Company</h4>
          <ul class='footer-list'>
            <li><a href='#about' class='footer-link'>About Us</a></li>
            <li>
              <a href='#case-studies' class='footer-link'>Case Studies</a>
            </li>
            <li><a href='#contact' class='footer-link'>Contact</a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class='footer-bottom'>
      <div class='footer-bottom-content'>
        <p class='copyright'>
          Â© 2025 {siteContent.company.legalName}. All rights reserved.
        </p>
        <div class='footer-bottom-links'>
          <a href='/privacy-policy' class='footer-bottom-link'>Privacy Policy</a
          >
          <a href='/terms-of-service' class='footer-bottom-link'
            >Terms of Service</a
          >
          <a href='/cookie-policy' class='footer-bottom-link'>Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-gray-900);
    color: var(--color-white);
    padding: var(--spacing-2xl) 0 var(--spacing-lg);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-2xl);
  }

  .footer-brand {
    max-width: 400px;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-md);
    font-weight: 600;
    font-size: 1.25rem;
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .footer-description {
    color: var(--color-gray-300);
    line-height: 1.6;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 200px);
    gap: var(--spacing-xl);
  }

  .footer-title {
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
    font-size: 1rem;
    font-weight: 600;
  }

  .footer-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .footer-link {
    color: var(--color-gray-300);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-white);
  }

  .footer-bottom {
    border-top: 1px solid #374151;
    padding-top: var(--spacing-lg);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .copyright {
    color: var(--color-gray-400);
    font-size: 0.875rem;
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--spacing-lg);
  }

  .footer-bottom-link {
    color: var(--color-gray-400);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-bottom-link:hover {
    color: var(--color-white);
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-lg);
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-sm);
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      grid-template-columns: 1fr;
    }

    .footer-bottom-links {
      flex-direction: column;
      gap: var(--spacing-xs);
    }
  }
</style>
